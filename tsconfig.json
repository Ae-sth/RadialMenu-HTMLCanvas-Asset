{
    "compilerOptions": {
      "module": "esnext", 
      "target": "es2019", 
      "noImplicitAny": true,
      "sourceMap": false,
      "strict": true,
      "rootDirs": [
        "src",
        "example/src"
      ],
      "outDir": "dist",
      "emitDecoratorMetadata": true, 
      "experimentalDecorators": true, 
      "declaration": false,
      "importHelpers": false,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "Node", 
      "esModuleInterop": true,
      "skipLibCheck": true, 
      "baseUrl": "."
     },
    "exclude": ["node_modules", "dist"]
  }